{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es7", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "lib"
  },
  "parser": "typescript-eslint-parser",
  "include": ["src/**/*.ts", "src/**/*.vue", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
